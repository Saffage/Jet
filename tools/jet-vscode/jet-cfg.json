{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["(", ")"],
        ["[", "]"],
        ["{", "}"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        { "open": "(", "close": ")"},
        { "open": "[", "close": "]"},
        { "open": "{", "close": "}"},
        { "open": "'", "close": "'"},
        { "open": "\"", "close": "\""}
    ],
    "folding": {
        "offSide": true,
		"markers": {
            "start": "^\\s*#region",
            "end": "^\\s*#endregion"
        }
	},
    "onEnterRules": [
        {
          "beforeText": "^\\s*(?:if|elif|else|match|while|for|(rec)?\\s*func|type).*\\s*$",
          "action": { "indent": "indent" }
        },
        {
          "beforeText": "^\\s*.*(?:struct|enum|trait)\\s*$",
          "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*#!.*$",
            "action": { "indent": "none", "appendText": "#! " }
        },
        {
            "beforeText": "^\\s*##.*$",
            "action": { "indent": "none", "appendText": "## " }
        }
    ]
}
